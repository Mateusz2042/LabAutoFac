@model IEnumerable<AdvancedProgramming.Models.Adult>

@{
    ViewBag.Title = "Filter";
}

 <p>
    @using (Html.BeginForm()){
    <p> Title: @Html.TextBox("text") <br />
        <button type="submit" class="waves-effect waves-light btn">Filter</button></p>
    }
</p>

    <table class="striped bordered centered">
        <thead>
            <tr>
                <th>FIRST NAME</th>
                <th>LAST NAME</th>
                <th>AGE</th>
                <th>JOB</th>
                <th>SINGIEL</th>
                <th>SALARY</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody class="striped">
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Age</td>
                    <td>@item.Job</td>
                    <td>@item.Singiel</td>
                    <td>@item.Salary</td>
                    <td><button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">edit</i></button></td>
                    <td><button type="button" onclick="location.href='@Url.Action("Details", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">details</i></button></td>
                    <td><button type="button" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">delete</i></button></td>
                </tr>
            </tbody>
        }
    </table>

    <div>
        <button onclick="window.location.href='/Adult/Display'" class="waves-effect waves-light btn">Back</button>
    </div>
