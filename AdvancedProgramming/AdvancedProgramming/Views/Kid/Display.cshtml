@model IEnumerable<AdvancedProgramming.Models.Kid>

@{
    ViewBag.Title = "Display";
}
<nav>
    <div class="nav-wrapper nav">
        <b class="brand-logo center">List of Kids</b>
        <ul id="nav-mobile" class="right hide-on-med-and-down" style="padding-right: 10px">
            <li>@DateTime.Now.ToShortDateString()</li>
        </ul>
    </div>
</nav>
</br>
<p>
    <button onclick="window.location.href='/Kid/Create'" class="waves-effect waves-light btn pulse"><i class="material-icons right">create</i>Create Kid</button>
</p>
<table class="bordered centered">
    <thead>
    <tr>
        <th>FIRST NAME</th>
        <th>LAST NAME</th>
        <th>AGE</th>
        <th>SCHOOL TYPE</th>
        <th>NAME CLASS</th>
        <th>POCKET MONEY VALUE</th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody class="striped">
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.SchoolType</td>
                <td>@item.NameClass</td>
                <td>@item.PocketMonetValue</td>
                <td><button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">edit</i></button></td>
                <td><button type="button" onclick="location.href='@Url.Action("Details", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">details</i></button></td>
                <td><button type="button" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">delete</i></button></td>
            </tr>
        </tbody>
    }
</table>
